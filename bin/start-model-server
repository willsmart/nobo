#!/bin/bash
args=$@
bindir=`realpath "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"`
toolsdir="$bindir/../tools"

pidfile="$bindir/../../model-server.pid"
echo $$ > "$pidfile"
function finish {
    rm "$pidfile"
}
trap finish EXIT

cd "$toolsdir/js"
npm install

cd "$bindir/.."
node "$toolsdir/js/mains/model-server.js" $args
